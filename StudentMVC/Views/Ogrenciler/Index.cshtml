@using OgrenciNotMVC.Models.EntityFramework
@model List<tblOGRENCILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class ="table table-bordered ">
    <tr>
        <th>ÖĞRENCİ ID</th>
        <th>ADI</th>
        <th>SOYADI</th>
        
        <th>CİNSİYET</th>
        <th>KULÜP</th>
        <th>İŞLEMLER</th>

    </tr>
    <tbody>
        @foreach(var ogr in Model)
            { 
            <tr>
                <td>@ogr.OgrenciID</td>
                <td>@ogr.OgrAd</td>
                <td>@ogr.OgrSoyad</td>

                <td>@ogr.OgrCinsiyet</td>
                
                
                <td>@ogr.tblKULUPLER.KulupAd</td>
               
                <td>
                    <a href="/Ogrenciler/Sil/@ogr.OgrenciID" class="btn btn-danger">Sil</a>
                    <a href="/Ogrenciler/OgrenciGetir/@ogr.OgrenciID" class="btn btn-success">Güncelle</a>
                </td>
            </tr>
            }
    </tbody>

</table>

<a href="/Ogrenciler/YeniOgrenci" class="btn btn-primary">Yeni Öğrenci Ekle</a>

