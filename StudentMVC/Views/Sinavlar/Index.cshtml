@using OgrenciNotMVC.Models.EntityFramework
@model List<tblNOTLAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>NOT ID</th>
        <th>DERS</th>
        <th>ÖĞRENCİ</th>
        <th>SINAV 1</th>
        <th>SINAV 2</th>
        <th>SINAV 3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>GÜNCELLE</th>
    </tr>

    <tbody>
        @foreach (var not in Model) 
        { 
            <tr>
                <td>@not.NotID</td>
                <td>@not.tblDERSLER.DersAd</td>
                <td>@not.tblOGRENCILER.OgrAd
                @not.tblOGRENCILER.OgrSoyad</td>
                <td>@not.Sinav1</td>
                <td>@not.Sinav2</td>
                <td>@not.Sinav3</td>
                <td>@not.Proje</td>
                <td>@not.Ortalama</td>
                <td>@not.Durum</td>
                <td><a href="/Sinavlar/NotGetir/@not.NotID" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>
<a href="/Sinavlar/YeniSinav" class="btn btn-primary">Yeni Not Girişi</a>
