@using OgrenciNotMVC.Models.EntityFramework
@model List<tblKULUPLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KULÜP ID</th>
        <th>KULÜP ADI</th>
        <th>KONTENJAN</th>
        <th>İŞLEMLER</th>
    </tr>
    <tbody>
        @foreach (var klp in Model)
        {
            <tr>
                <td>@klp.KulupID</td>
                <td>@klp.KulupAd</td>
                <td>@klp.KulupKontenjan</td>
                <td><a href="/Kulupler/Sil/@klp.KulupID" class="btn btn-danger" > Sil </a>
                <a href="/Kulupler/KulupGetir/@klp.KulupID" class="btn btn-success">Güncelle</a></td>
            </tr>

        }

    </tbody>
</table>

<a href="/Kulupler/YeniKulup" class="btn btn-primary">Yeni Kulüp Kaydı</a>

